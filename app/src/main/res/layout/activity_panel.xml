<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panel.PanelActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/dashboard"
        android:textSize="40sp"
        android:layout_marginTop="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_panel_ventas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:text="@string/btn_panel_ventas"
        android:textSize="26dp"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/btn_panel_publicaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:text="@string/btn_panel_publicaciones"
        android:textSize="26dp"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_panel_ventas" />

    <Button
        android:id="@+id/btn_panel_ajustes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:text="@string/btn_panel_ajustes"
        android:textSize="26dp"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_panel_publicaciones" />

    <Button
        android:id="@+id/btn_panel_usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:text="@string/btn_panel_usuarios"
        android:textSize="26dp"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_panel_ajustes" />

    <Button
        android:id="@+id/btn_panel_cerrar_sesion"
        android:layout_width="match_parent"
        android:layout_marginBottom="34dp"
        android:layout_marginRight="58dp"
        android:layout_marginLeft="58dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_panel_cerrar_sesion"
        android:background="@drawable/btn_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>