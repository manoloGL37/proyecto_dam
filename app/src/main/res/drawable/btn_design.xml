<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#42A5F5" /> <!-- Background color when pressed -->
            <corners android:radius="25dp" /> <!-- Button corner radius -->
        </shape>
    </item>
    <!-- Button focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#42A5F5" /> <!-- Background color when focused -->
            <corners android:radius="25dp" /> <!-- Button corner radius -->
        </shape>
    </item>
    <!-- Button default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1976D2" /> <!-- Default background color -->
            <corners android:radius="25dp" /> <!-- Button corner radius -->
        </shape>
    </item>
</selector>